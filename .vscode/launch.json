{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Tauri Development Debug",
            "cargo": {
                "args": [
                    "build",
                    "--no-default-features",
                    "--target-dir=./client/src-tauri/target",
                    "--features=debug_redirect"
                ]
            },
            "preLaunchTask": "ui:dev",
            "cwd": "${workspaceFolder}/client/src-tauri",
            "envFile": "${workspaceFolder}/.vscode/debug.env"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Tauri Production Debug",
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "--target-dir=./client/src-tauri/target",
                ]
            },
            "preLaunchTask": "ui:build",
            "cwd": "${workspaceFolder}/client/src-tauri"
        }
    ]
}