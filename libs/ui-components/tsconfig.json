{
  "extends": "@cylearun/tsconfig/web",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "env.d.ts"
  ],
  "exclude": [
    "src/**/*.cy.ts",
    "src/**/*.cy.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json",
    }
  ]
}